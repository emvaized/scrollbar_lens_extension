{
    "manifest_version": 2,
    "name": "Scrollbar Lens",
    "description": "Shows a minimap of the page when hovering over the scrollbar",
    "version": "0.0.1",
    "author": "emvaized",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "index.js"
            ],
            "css": [
                "index.css"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "<all_urls>"
    ],
    "icons": {
        "48": "icon.png"
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "scrollbar_lens@emvaized.dev"
        }
    }
}